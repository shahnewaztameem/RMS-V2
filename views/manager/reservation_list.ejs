<%- include("../partials/manager/header") %>

<div id="wrapper">

    <!-- Sidebar -->
    <%- include("../partials/manager/sidemenu") %>
    <div id="page-wrapper">
        <h2 class="text-center">All reservation List</h2>
        <table class="table table-bordered table-striped">
            <tr>
                <th>ID</th>
                <th>User Id</th>
                <th>Username</th>
                <th>User Email</th>
                <th>Date</th>
                <th>Time</th>
                <th>Phone No</th>
                <th>guest count</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
            <% if(reservation_details.length != null) { %>
            <% reservation_details.forEach((reservation) => { %>
            <tr>
                <td><%= reservation.id %></td>
                <td><%= reservation.u_id %></td>
                <td><%= reservation.u_name %></td>
                <td><%= reservation.u_email %></td>
                <td><%= reservation.date %></td>
                <td><%= reservation.time %></td>
                <td><%= reservation.phone_no %></td>
                <td><%= reservation.total_guest %></td>
                <td class="text-primary" style="text-transform: uppercase;"><strong><%= reservation.status %></strong></td>
                <td>
                    <a href="/home-manager/reservation_edit/<%= reservation.id %>" class="btn btn-primary btn-sm">Edit</a>
          
                </td>
            </tr>
            
            

            <% }) } else { %>
                <h2 class="text-danger">No record found!!</h2>
             <% } %>


        </table>

    </div>


    <%- include("../partials/manager/footer") %>