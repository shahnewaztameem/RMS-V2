<%- include("../partials/manager/header") %>
<div id="wrapper">

    <!-- Sidebar -->
    <%- include("../partials/manager/sidemenu") %>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <h3 class="text-center">Edit Reservation!</h3>
            <form action="" method="POST">
                <table class="table table-bordered table-stripped table-hover text-center">
                    <div class="form-group">
                        <tr>
                            <td>
                                <h4><strong>Reservation Id</strong></h4>
                            </td>
                            <td>
                                <input type="text" class="form-control" value="<%= reservation_details.id%>" disabled>
                            </td>
                        </tr>
                    </div>
                    </tr>
                    <tr>
                        <td>
                            <h4><strong>User id</strong></h4>
                        </td>
                        <td>
                            <input type="text" name="" id="" value="<%= reservation_details.u_id%>" class="form-control"
                                disabled>

                        </td>
                    </tr>
                    <tr>
                        <td>
                            <h4><strong>Username</strong></h4>
                        </td>
                        <td>
                            <input type="text" name="" id="" value="<%= reservation_details.u_name%>"
                                class="form-control" disabled>

                        </td>
                    </tr>
                    <tr>
                        <td>
                            <h4><strong>Email</strong></h4>
                        </td>
                        <td>
                            <input type="email" name="" id="" value="<%= reservation_details.u_email%>"
                                class="form-control" disabled>

                        </td>
                    </tr>
                    <tr>
                        <td><strong>Date</strong></td>
                        <td><input type="text" value="<%= reservation_details.date %>" disabled class="form-control">
                        </td>
                    </tr>
                    <tr>
                        <td><strong>Phone No</strong></td>
                        <td><input type="text" name="phone_no" value="<%= reservation_details.phone_no %> "
                                class="form-control"></td>
                    </tr>
                    <tr>
                        <td><strong>Total Guest</strong></td>
                        <td><input type="number" value="<%=reservation_details.total_guest%> " class="form-control"
                                name="total_guest"></td>
                    </tr>
                    <tr>
                        <td><strong>Status</strong></td>
                        <td>
                            <select name="reservation_status" id="" class="form-control">
                                <option value="pending">Pending</option>
                                <option value="accepted">Accepted</option>
                                <option value="denied">Denied</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <input type="submit" class="btn btn-success" name="signup" style="width: 40%;"
                                value="Edit Reservation">
                        </td>
                    </tr>
                </table>
            </form>
        </div>
    </div>
</div>
<%- include("../partials/manager/footer") %>