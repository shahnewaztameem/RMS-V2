<%- include("../partials/manager/header") %>

<div id="wrapper">

  <%- include("../partials/manager/sidemenu") %>

  <div id="page-wrapper">

    <div class="col-lg-offset-4 col-lg-4">
      <div class="panel panel-info">
        <div class="panel-heading">
          <div class="row">
            <div class="col-xs-12 text-center">
              <h2>Total users : <%= uList.length%></h2>
            </div>


          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">

        <div class="col-md-offset-3 col-md-6">
          <h2 class="text-center">Members list</h2>
          <table class="table table-bordered table-stripped table-hover text-center">

            <% if(uList.length !=null) { %>
            <tr>
              <th>ID</th>
              <th>username</th>
              <th>Firstname</th>
              <th>Last name</th>
              <th>User email</th>
              <th>User Role</th>
              <th>User Gender</th>
              <th>Action</th>
            </tr>
            <% for(var i = 0; i < uList.length; i++){ %>
            <% if(uList[i].id != admin_id){%>
            <tr>
              <td><%= uList[i].id %></td>

              <td>
                <%= uList[i].username %>
              </td>
              <td>
                <%= uList[i].user_firstname %>
              </td>
              <td>
                <%= uList[i].user_lastname %>
              </td>
              <td>
                <%= uList[i].user_email %>
              </td>
              <td>
                <%= uList[i].user_type %>
              </td>
              <td>
                <%= uList[i].user_gender %>
              </td>
              <td>
                <a href="/home-manager/user_edit/<%= uList[i].id%>" class="btn btn-primary btn-sm"
                  style="display: block;">Edit</a>
              </td>
            </tr>
            <%} } } else {%>
            <h2>No users found</h2>
            <%}%>
            </table>
        </div>
      </div>
    </div>

  </div>

</div>

<!-- JavaScript -->
<%- include("../partials/manager/footer") %>