<%- include("../partials/admin/header") %>

<div id="wrapper">

  <!-- Sidebar -->
  <%- include("../partials/admin/sidemenu") %>


  <div id="page-wrapper">
    <div class="container">
      <!-- Trigger the modal with a button -->
      <button type="button" class="btn btn-info btn-lg hidden" data-toggle="modal" data-target="#myModal">Open
        Modal</button>
      <!-- Modal -->
      <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">
          <!-- Modal content-->
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal">&times;</button>
              <h4 class="modal-title">Information</h4>
            </div>
            <div class="modal-body">
              <p>You must add at least 2 items for opening a restaurant</p>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-md-offset-3 col-md-6">
          <div class="col-md-offset-3 col-md-6">
            <%if(errors != null){ for(var i=0; i< errors.length; i++){%>
            <p>
              <%=errors[i].msg%>
            </p>
            <%}}%>
          </div>
          <h2 class="text-center"><strong>Add Restaurants and Menus</strong></h2>
          <form action="" method="POST">
            <div class="form-group">
              <label for="restaurantName">Restaurant Name</label>
              <input type="text" name="r_name" id="" placeholder="Enter restaurant name" class="form-control">
            </div>
            <div class="form-group">
              <label for="restaurantName">Restaurant Location</label>
              <select name="r_location" id="" class="form-control">
                <option value="Gulsan-1">Gulsan-1</option>
                <option value="Gulsan-2">Gulsan-2</option>
                <option value="Mohakhali">Mohakhali</option>
                <option value="Kuril">Kuril</option>
                <option value="Banani">Banani</option>
                <option value="Khilkhet">Khilkhet</option>
                <option value="Nikunjo-2">Nikunjo-2</option>
                <option value="Airport">Airport</option>
                <option value="Badda">Badda</option>
                <option value="Rampura">Rampura</option>
              </select>
            </div>
            <div class="form-group">
              <label for="about">Menus</label>
              <input type="hidden" id="count" name="count" value="1" />
              <textarea class="form-control" type="text" id="detail1" name="about1" rows="2" placeholder="About item"
                required style="margin-bottom: 10px;"></textarea>

              <input autocomplete="off" class="input form-control" id="field1" name="item1" type="text" required
                placeholder="Item name" style="margin-bottom: 10px;">
              <button id="b1" class="btn btn-info add-more" type="button">More items</button>
            </div>
            <div class="form-group">
              <label for="about">Details about restaurent</label>
              <textarea name="r_about" id="edit" cols="30" rows="10" class="form-control"
                placeholder="Enter details of the restaurant"></textarea>
            </div>
            <div class="form-group">
              <input type="submit" class="btn btn-success" name="signup" value="Add Restaurant" class="form-control">
            </div>

          </form>
        </div>
      </div>
    </div>
  </div>

</div>

<%- include("../partials/admin/footer") %>