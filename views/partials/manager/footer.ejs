  <script type="text/javascript">
    $('#myModal').modal({
      backdrop: 'static',
      keyboard: false
    })
    $(window).load(function () {
      $('#myModal').modal('show');
    });
  </script>
  <script>
    $(document).ready(function () {

      var next = 1;
      $(".add-more").click(function (e) {
        e.preventDefault();
        var addto = "#field" + next;
        var addDetail = "#detail" + next;
        var addRemove = "#field" + (next);
        next = next + 1;
        $("#count").val(next);
        var newIn = '<input autocomplete="off" class="input form-control" id="field' + next + '" name="item' +
          next + '"required placeholder="Item name" type="text" style="margin-bottom: 10px;">';

        var newDe = '<textarea class="form-control" type="text" id="detail' + next + '" name="about' + next +
          '" rows="2" placeholder="About item" style="margin-bottom: 10px;" required></textarea>';
        var newInput = $(newIn);
        var newDe = $(newDe);
        var removeBtn = '<button id="remove' + (next - 1) +
          '" class="btn btn-danger remove-me" >Delete item</button></div><div id="field"></br>';
        var removeButton = $(removeBtn);
        $(addto).after(newInput);
        $(addto).after(newDe);

        $(addRemove).after(removeButton);
        $("#field" + next).attr('data-source', $(addto).attr('data-source'));

        $('.remove-me').click(function (e) {
          e.preventDefault();
          var fieldNum = this.id.charAt(this.id.length - 1);
          var fieldID = "#field" + fieldNum;
          var fieldD = "#detail" + fieldNum;
          $(this).remove();
          $(fieldID).remove();
          $(fieldD).remove();
        });
      });


    });
  </script>
  </body>

  </html>